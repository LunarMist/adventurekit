{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": {
      "options": [
        170
      ]
    },
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "objects": "always",
          "functions": "never",
          "imports": "never",
          "exports": "never",
          "typeLiterals": "always"
        },
        "singleline": "never"
      }
    ],
    "no-increment-decrement": false,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "ter-arrow-parens": false,
    "align": [
      true,
      "parameters",
      "statements",
      "members",
      "elements"
    ],
    "import-name": [
      true,
      {
        "v4": "uuid",
        "mail": "SGMail",
        "jsonwebtoken": "jwt",
        "pubsubJs": "PubSub",
        "light": "protobuf",
        "urijs": "URI"
      }
    ],
    "type-literal-delimiter": true,
    "object-literal-key-quotes": [
      true,
      "consistent-as-needed"
    ]
  },
  "linterOptions": {
    "exclude": [
      "common/build/",
      "common/node_modules/",
      "frontend/build/",
      "frontend/node_modules/",
      "frontend/src/imgui/*",
      "server/build/",
      "server/node_modules/"
    ]
  }
}
