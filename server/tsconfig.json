{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "Entities/*": [
        "src/entities/*"
      ],
      "Utils/*": [
        "src/utils/*"
      ],
      "Config/*": [
        "src/config/*"
      ],
      "Sockets/*": [
        "src/sockets/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
