{
  "compilerOptions": {
    "module": "es6",
    "target": "es2017",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "ImGui/*": [
        "src/imgui/*"
      ],
      "GL/*": [
        "src/gl/*"
      ],
      "IO/*": [
        "src/io/*"
      ],
      "Net/*": [
        "src/net/*"
      ],
      "Store/*": [
        "src/store/*"
      ],
      "Api/*": [
        "src/api/*"
      ],
      "Message/*": [
        "src/message/*"
      ],
      "Event/*": [
        "src/event/*"
      ],
      "Fonts/*": [
        "assets/fonts/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
